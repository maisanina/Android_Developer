<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputControlActivity">

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="197dp"
        android:layout_marginEnd="98dp"
        android:text="0%"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="@+id/seekBar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/seekBar"
        tools:layout_editor_absoluteY="45dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="537dp" />

    <TextView
        android:id="@+id/tv_label_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Your Languange"
        app:layout_constraintStart_toStartOf="@+id/seekBar"
        app:layout_constraintTop_toBottomOf="@+id/tv_value" />

    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bt_submit_cb"
        app:layout_constraintTop_toBottomOf="@+id/tv_label_cb"
        tools:layout_constraintHorizontal_bias="1.0"
        tools:layout_editor_absoluteX="0dp"
        tools:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C" />

        <CheckBox
            android:id="@+id/cb_python"
            android:layout_width="98dp"
            android:layout_height="46dp"
            android:text="Python" />

        <CheckBox
            android:id="@+id/cb_go"
            android:layout_width="86dp"
            android:layout_height="51dp"
            android:text="Go" />

        <CheckBox
            android:id="@+id/cb_java"
            android:layout_width="105dp"
            android:layout_height="59dp"
            android:text="Java" />

    </RadioGroup>

    <TextView
        android:id="@+id/tv_label_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Preference"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="244dp" />

    <Button
        android:id="@+id/bt_submit_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="178dp" />

    <Button
        android:id="@+id/bt_submit_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="256dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    </RadioGroup>

    <RadioButton
        android:id="@+id/rb_prog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Programmer"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="365dp" />

    <RadioButton
        android:id="@+id/rb_sa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="System Analiyst"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="412dp" />

    <RadioButton
        android:id="@+id/rb_ui_designer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UI Designer"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="463dp" />

</androidx.constraintlayout.widget.ConstraintLayout>